                                        <i class="ri-shopping-cart-line"></i>
                                        <div class="fly-item"><span class="item-number"><%= totalProductsCart %></span></div>
                                    </div>
                                    
                                    <div class="icon-text">
                                        <div class="mini-text">Total</div>
