                </div>
            </div>
        </header>
        <!-- FIM do header -->

        <main>
            <div class="single-cart">
                <div class="container">
                    <div class="wrapper">
                        <div class="breadcrumb">
                            <ul class="flexitem">
                                <li><a href="#">Home</a></li>
                                <li>Cart</li>
                            </ul>
                        </div>
                        <div class="page-title">
                            <h1>Shopping Cart</h1>
                        </div>
                        <div class="products one cart">
                            <div class="flexwrap">
                                <form id="checkout-form" action="/update-cart-and-checkout" method="POST">
                                    <div class="form-cart">
                                        <div class="item">
                                            <table id="cart-table">
                                                <thead>
                                                    <tr>
                                                        <th>Item</th>
                                                        <th>Price</th>
                                                        <th>Qty</th>
                                                        <th>Total Order</th>
                                                        <th>Subtotal</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% let subtotal = 0; %>
                                                    <% results6.forEach(result => { %>
                                                        <% let itemSubtotal = (result.price * result.min_order) * result.quantity; %>
                                                        <% subtotal += itemSubtotal; %>
                                                        <tr>
                                                            <td class="flexitem">
                                                                <div class="thumbnail object-cover">
                                                                    <a href="#"><img src="/assets/empresas_img/<%= result.main_img %>" alt=""></a>
                                                                </div>
                                                                <div class="content">
                                                                    <strong><a href="#"><%= result.product_name %></a></strong>
                                                                    <input type="hidden" name="product_names[]" value="<%= result.product_name %>">
                                                                    <p>Brand: <%= result.company_name %></p>
                                                                    <p>Min. Order: <%= result.min_order %> un</p>
                                                                </div>
                                                            </td>
                                                            <td id="price_<%= result.product_id %>"><%= result.price.toFixed(2) %> €</td>
                                                            <input type="hidden" name="product_prices[]" value="<%= result.price %>>">
                                                            <td>
                                                                <div class="qty-control flexitem">
                                                                    <button type="button" class="minus" data-product-id="<%= result.product_id %>" onclick="decreaseQuantityItem('<%= result.product_id %>')">-</button>
                                                                    <input type="text" name="quantities[]" value="<%= result.quantity %>" class="input_quantity" id="quantity_<%= result.product_id %>">
                                                                    <input type="hidden" name="productIds[]" value="<%= result.product_id %>">
                                                                    <button type="button" class="plus" data-product-id="<%= result.product_id %>" onclick="increaseQuantityItem('<%= result.product_id %>')">+</button>
                                                                </div>
                                                            </td>
                                                            <td><%= (result.min_order * result.quantity) %> un</td>
                                                            <input type="hidden" name="total_orders[]" value="<%= (result.min_order * result.quantity) %>">
                                                            <td id="subtotal_item_<%= result.product_id %>"><%= itemSubtotal.toFixed(2) %> €</td>
                                                            <td><a href="#" class="item-remove" data-product-id="<%= result.product_id %>"><i class="ri-close-line"></i></a></td>
                                                            <td></td>
                                                        </tr>
                                                    <% }); %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                
                                    <div class="cart-summary styled">
                                        <div class="item">
                                            <div class="shipping-rate collapse">
                                                <div class="has-child expand">
                                                    <a href="#" class="icon-small">Shipping and Tax</a>
                                                    <div class="content">
                                                        <div class="delivery_type">
                                                            <div class="div-cart">
                                                                <label for="delivery_country">Select Delivery Country</label>
                                                                <select name="delivery_country" id="delivery_country">
                                                                </select>
                                                            </div>
                                                        </div>

                                                        <div class="delivery_type">
                                                            <div class="div-cart">
                                                                <label for="delivery_adress">Delivery Address</label>
                                                                <input type="text" id="delivery_adress" name="delivery_adress" placeholder="Address" required>
                                                            </div>
                                                        </div>

                                                        <div class="delivery_speed">
                                                            <div class="div-cart">
                                                                <label for="delivery_speed">Select Delivery Speed</label>
                                                                <select name="delivery_speed" id="delivery_speed" required>
                                                                    <option value="Standart">Standart</option>
                                                                    <option value="Express">Express</option>
                                                                </select>
                                                            </div>
                                                        </div>

                                                        <div class="delivery_type">
                                                            <div class="div-cart">
                                                                <label for="delivery_date">Select Delivery Date</label>
                                                                <input type="text" id="delivery_date" name="delivery_date" placeholder="Select a delivery date" required>
                                                            </div>
                                                        </div>

                                                        <div class="rate-options variant">
                                                            <p>
                                                                <span id="delivery_type" name="delivery_type">Delivery Type: National</span>
                                                                <input type="hidden" id="delivery_type_input" name="delivery_type" value="National">
                                                                <label for="flat" class="circle"></label>
                                                            </p>
                                                            <p>
                                                                <span id="delivery_price">Price: 0.00 €</span>
                                                                <label for="flat" class="circle"></label>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="cart-total">
                                                <table>
                                                    <tbody>
                                                        <tr>
                                                            <th>Subtotal</th>
                                                            <td name="cart_subtotal" id="subtotal"><%= subtotal.toFixed(2) %> €</td>
                                                            <input type="hidden" name="cart_subtotal" id="cart_subtotal_input" value="<%= subtotal.toFixed(2) %>">
                                                        </tr>
                                                        <tr>
                                                            <th>Shipping <span class="mini-text" id="shipping-speed">(Standart)</span></th>
                                                            <td name="cart_shipping_price" id="shipping">0.00 €</td>
                                                            <input type="hidden" name="cart_shipping_price" id="cart_shipping_price_input" value="0.00">
                                                        </tr>
                                                        <tr class="grand-total">
                                                            <th>TOTAL</th>
                                                            <td name="cart_total" id="total"><strong><%= subtotal.toFixed(2) %> €</strong></td>
                                                            <input type="hidden" name="cart_total" id="cart_total_input" value="<%= subtotal.toFixed(2) %>">
                                                        </tr>
                                                    </tbody>
                                                </table>
                                                <button type="button" id="checkout-button" class="secondary-button">Checkout</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           
        </main>
        <!-- Fim do main -->

